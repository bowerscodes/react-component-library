{
  "page": {
    "id": "warningPage",
    "title": "Account Deletion",
    "elements": [
      {
        "id": "deletion-hint",
        "component": "Hint",
        "props": {
          "hintText":"Please review the following section carefully.",
          "size": "s"
        }
      },
      {
        "id": "yourUserName",
        "component": "TextInput",
        "props": {
          "textInputLabel": "What's your Username?",
          "width": "m"
        }
      },
      {
        "id": "yourPassword",
        "component": "TextInput",
        "props": {
          "textInputLabel": "What's your Password?",
          "width": "m"
        }
      },
      {
        "id": "whyDeleting",
        "component": "Checkboxes",
        "props": {
          "label": "What is the main reason for deleting your account?",
          "options": [
            {
              "key": "option1",
              "id": "tooManyEmails",
              "value": "tooManyEmails",
              "label": "Too many emails"
            },
            {
              "key": "option2",
              "id": "neverSignedUp",
              "value": "neverSignedUp",
              "label": "I never signed up"
            },
            {
              "key": "option3",
              "id": "noLongerInterested",
              "value": "noLongerInterested",
              "label": "I'm no longer interested in your services"
            },
            {
              "key": "option4",
              "id": "other",
              "value": "other",
              "label": "Other"
            }
          ]
        }
      },
      {
        "id": "confirmation",
        "component": "ButtonGroup",
        "props": {
          "label": "Confirm",
          "buttons": [
            {
              "key": "button1",
              "id": "submit",
              "type": "warning",
              "size": "m",
              "label": "Delete Account"
            },
            {
              "key": "button2",
              "id": "cancel",
              "type": "secondary",
              "size": "m",
              "label": "Cancel"
            }
          ],
          "content": {
            "text": "Are you sure you want to delete your account?",
            "hint": "This action cannot be undone"
          }
        }
      }
    ]
  }
